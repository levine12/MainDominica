<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
    <id>dominicamodule</id>
    <name>Dominica Module</name>
    <version>0.1-SNAPSHOT</version>
    <package>org.openmrs.module.dominicamodule</package>
    <author>Dr. Barry Levine</author>
    <description>
        Parent project for Dominica Module
    </description>

    <activator>org.openmrs.module.dominicamodule.DominicaModuleActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
    <require_version>1.9.*</require_version>
    <require_database_version>1.0.0</require_database_version>
	
	<!-- Extensions -->
    <extension>
        <point>org.openmrs.admin.list</point>
        <class>org.openmrs.module.dominicamodule.extension.html.AdminList</class>
    </extension>
    <extension>
        <point>org.openmrs.patientDashboardTab</point>
        <class>org.openmrs.module.dominicamodule.extension.html.LabsPatientDashboardTab</class>
    </extension>

   <extension>
        <point>org.openmrs.patientDashboardTab</point>
        <class>org.openmrs.module.dominicamodule.extension.html.AllergiesPatientDashboardTab</class>
    </extension>

    <extension>
        <point>org.openmrs.patientDashboardTab</point>
        <class>org.openmrs.module.dominicamodule.extension.html.PatientDrugsDashboardTabExt</class>
    </extension>
    <extension>
        <point>org.openmrs.patientDashboard.afterLastEncounter</point>
        <class>org.openmrs.module.dominicamodule.extension.html.PatientSummaryExtension</class>
    </extension>                      

        
    <!-- The hibernate mapping file stored in /metadata/Note.hbm.xml and in the omod when packaged ////
    -->
    <mappingFiles> 
       LabOrder.hbm.xml
    </mappingFiles>	
   
        
    <globalProperty>
        <property>dominicamodule.labsetsproperty</property>
        <defaultValue></defaultValue>
        <description>
            Provide a list of concept ids corresponding to labsets used in lab orders
            e.g. 1234,6477
        </description>
    </globalProperty>
        
